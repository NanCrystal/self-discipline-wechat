/**index.wxss**/
.container {
  /* height: 100vh; */
  padding: 20px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #e96a97;
}
.upcoming-item {
  width: 300px;
  min-height: 70px;
  border-radius: 10px;
  background-color: #f8e0e8;
  padding: 10px;
  margin-bottom: 20px;
  position: relative;
}
.things-container {
  margin-top: 10px;
}
.title-date {
  font-weight: 600;
  font-size: 14px;
}
.title-time {
  font-size: 12px;
  margin-left: 8px;
}
.thing-item {
  display: flex;
  align-items: center;
}
.thing-item-container {
}
.item-checkbox {
  transform: scale(0.6, 0.6);
}
.weui-cell__bd {
  font-size: 14px;
  /* color: #e96a97; */
}
.add-btn {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 60px;
}
.add-image {
  width: 100%;
  height: 100%;
}
.delete-image{
    position: absolute;
    right: -6px;
    top: -6px;
    width: 20px;
    height: 20px;
}