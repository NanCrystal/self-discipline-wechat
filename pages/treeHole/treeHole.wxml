</block>
  <block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="index">
    <view class="treeHole-item" data-item="{{item}}" catch:tap="tapItem">
      <block>
        <view wx:if="{{index%2!==0}}" class="treeHole-image image-right">
          <image class="bgc-image bgc-image-right" src="../../assets/images/bgc_01.png" mode="aspectFill" />
        </view>
        <view class="treeHole-left">
          <view class="treeHole-title">
            <text class="title-date">{{item.selectDate}}</text>
            <text class="title-time">{{item.title}}</text>
          </view>
          <view class="weui-cell__bd"> {{item.content}}</view>
        </view>
        <view wx:if="{{index%2===0}}" class="treeHole-image image-left">
          <image class="bgc-image bgc-image-left" src="../../assets/images/bgc_01.png" mode="aspectFill" />
        </view>
      </block>
